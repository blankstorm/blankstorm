{
	"name": "blankstorm-client",
	"version": "0.0.0-alpha-1.4.0",
	"description": "Blankstorm",
	"main": "app.js",
	"scripts": {
		"format:check": "npx prettier --check src/**/*.{html,js}",
		"format:fix": "npx prettier --write src/**/*.{html,js}",
		"format": "npm run format:check && npm run format:fix",
		"lint:check": "npx eslint src/**/*.js",
		"lint:fix": "npx eslint  --fix src/**/*.js",
		"lint:check-ci": "npx eslint -f node_modules/eslint-formatter-azure-devops/index.js src/**/*.js",
		"lint": "npm run lint:check && npm run lint:fix",
		"test": "npx electron .",
		"build:win": "npx electron-builder build -w --publish never",
		"build:mac": "npx electron-builder build -m --publish never",
		"build:linux": "npx electron-builder build -l --publish never",
		"build:all": "npx electron-builder build -mlw --publish never",
		"build": "npx electron-builder build --publish never",
		"deploy": "node scripts/deploy.js"
	},
	"build": {
		"appId": "dev.drvortex.blankstorm",
		"productName": "Blankstorm Client",
		"copyright": "Copyright Â© 2022 ${author}",
		"icon": "./icon.png",
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"removeDefaultUninstallWelcomePage": true,
			"deleteAppDataOnUninstall": true
		},
		"win": {
			"executableName": "blankstorm-client"
		},
		"linux": {
			"category": "Game"
		},
		"mac": {
			"category": "public.app-category.games"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dr-vortex/blankstorm.git"
	},
	"keywords": [
		"blankstorm",
		"dr-vortex"
	],
	"author": "Dr. Vortex",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/dr-vortex/blankstorm/issues"
	},
	"homepage": "https://github.com/dr-vortex/blankstorm#readme",
	"dependencies": {
		"@babylonjs/core": "5.27.x",
		"@babylonjs/loaders": "5.27.x",
		"jquery": "^3.6.2",
		"socket.io-client": "4.x.x"
	},
	"devDependencies": {
		"electron": "^21.3.0",
		"electron-builder": "^23.6.0",
		"eslint": "^8.24.0",
		"eslint-formatter-azure-devops": "^0.2.0",
		"mime-types": "^2.1.35",
		"prettier": "^2.7.1"
	}
}
