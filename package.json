{
	"name": "blankstorm-client",
	"version": "1.0.0-alpha-1.4.4",
	"private": true,
	"description": "Blankstorm",
	"main": "src/client/app.cjs",
	"type": "module",
	"scripts": {
		"format:check": "prettier --check .",
		"format": "prettier --write src .",
		"lint": "eslint . && tsc --project tsconfig.json --noEmit",
		"dev:client": "ts-node .build/client.ts -o dist/dev-client && electron dist/dev-client/app.cjs --bs-debug",
		"dev:server": "ts-node src/server/cli.ts",
		"build:client": "ts-node .build/client.ts --app",
		"build:server": "ts-node .build/server.ts",
		"build": "npm run build:client && npm run build:server",
		"stats:word-count": "wc -lw src/**/*.html src/**/*.ts src/**/*.cjs src/**/**/*.fx src/**/**/*.json src/**/**/*.css"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dr-vortex/blankstorm.git"
	},
	"keywords": [
		"blankstorm",
		"dr-vortex"
	],
	"author": "Dr. Vortex",
	"license": "See license.md",
	"bugs": {
		"url": "https://github.com/dr-vortex/blankstorm/issues"
	},
	"homepage": "https://blankstorm.drvortex.dev",
	"engines": {
		"node": ">=18.0.0"
	},
	"dependencies": {
		"@babylonjs/core": "^6.4.1",
		"@babylonjs/loaders": "^6.4.1",
		"@blankstorm/api": "^0.0.7",
		"eventemitter3": "^5.0.1",
		"jquery": "^3.6.2",
		"socket.io": "^4.6.1",
		"socket.io-client": "^4.6.1"
	},
	"devDependencies": {
		"@types/archiver": "^5.3.2",
		"@types/jquery": "^3.5.16",
		"@types/node": "^20.2.1",
		"@typescript-eslint/eslint-plugin": "^5.59.6",
		"@typescript-eslint/parser": "^5.59.6",
		"archiver": "^5.3.1",
		"electron": "^22.2.0",
		"electron-builder": "^24.6.3",
		"esbuild": "^0.17.14",
		"esbuild-plugin-replace": "^1.4.0",
		"eslint": "^8.24.0",
		"mime-types": "^2.1.35",
		"pkg": "^5.8.1",
		"prettier": "^2.7.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.4"
	}
}
