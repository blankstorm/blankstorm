{
	"name": "blankstorm",
	"version": "1.0.0-alpha-1.4.4",
	"private": true,
	"description": "Blankstorm",
	"main": "build/client/app.js",
	"type": "module",
	"scripts": {
		"format:check": "prettier --check .",
		"format": "prettier --write .",
		"lint": "eslint src && tsc --project tsconfig.json --noEmit",
		"dev:client": "tsx build/client.ts --no-app --debug && npm run dev+nobuild:client --",
		"dev+nobuild:client": "electron dist/build/client/app.js --dev --quiet --path tmp/data",
		"dev:server": "tsx src/server/cli.ts",
		"build:client": "tsx build/client.ts",
		"build:server": "tsx build/server.ts",
		"build": "npm run build:client && npm run build:server"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/blankstorm/blankstorm.git"
	},
	"keywords": [
		"blankstorm"
	],
	"author": {
		"name": "James Prevett",
		"email": "jp@drvortex.dev",
		"url": "https://drvortex.dev"
	},
	"license": "See license.md",
	"bugs": {
		"url": "https://github.com/blankstorm/blankstorm/issues"
	},
	"homepage": "https://blankstorm.net",
	"engines": {
		"node": ">=18.0.0"
	},
	"lint-staged": {
		"*": ["prettier --write"]
	},
	"dependencies": {
		"@babylonjs/core": "^7.6.0",
		"@babylonjs/loaders": "^7.6.0",
		"@blankstorm/api": "^0.5.4",
		"eventemitter3": "^5.0.1",
		"jquery": "^3.7.1",
		"lint-staged": "^15.2.7",
		"logzen": "^0.3.8",
		"socket.io": "^4.7.5",
		"socket.io-client": "^4.7.5",
		"utilium": "^0.5.6"
	},
	"devDependencies": {
		"@types/archiver": "^5.3.2",
		"@types/jquery": "^3.5.29",
		"@types/node": "^20.2.1",
		"@typescript-eslint/eslint-plugin": "^7.7.1",
		"@typescript-eslint/parser": "^7.7.1",
		"archiver": "^5.3.1",
		"electron": "^28.3.1",
		"electron-builder": "^24.13.3",
		"esbuild": "^0.20.2",
		"esbuild-plugin-glslx": "^0.0.4",
		"eslint": "^8.57.0",
		"postject": "^1.0.0-alpha.6",
		"prettier": "^3.2.5",
		"tsx": "^4.15.8",
		"typescript": "^5.4.5"
	}
}
