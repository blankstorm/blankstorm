{
	"compilerOptions": {
		"module": "ESNext",
		"lib": ["ESNext", "DOM"],
		"target": "ESNext",
		"moduleResolution": "Bundler",
		"outDir": "build/ts",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"noImplicitThis": true,
		"strict": true,
		"paths": {
			"*.glslx": ["./src/types.d.ts"]
		},
		"moduleSuffixes": [".glslx", ""],
		"skipLibCheck": true
	},
	"files": ["src/index.ts"],
	"include": ["./src/**/*.ts", "scripts/*.ts", "./src/*.d.ts"],
	"exclude": ["node_modules"]
}
