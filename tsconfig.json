{
	"compilerOptions": {
		"lib": ["ESNext", "DOM"],
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "bundler",
		"outDir": "build/ts",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noImplicitThis": true,
		"paths": {
			"*.glslx": ["./src/types.d.ts"]
		},
		"moduleSuffixes": [".glslx", ""]
	},
	"files": ["src/index.ts"],
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	},
	"include": ["./src/**/*.ts", "./.build/*.ts", "./src/*.d.ts"],
	"exclude": ["node_modules"]
}
