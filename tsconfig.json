{
	"compilerOptions": {
		"lib": ["ESNext", "DOM"],
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "bundler",
		"outDir": "dist/tmp/ts",
		"typeRoots": ["node_modules/@types", "src/typings" ],
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noImplicitThis": true
	},
	"files": ["src/index.ts"],
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node",
	},
	"include": ["src/**/*.ts", "build/*.ts", "src/typings/*.d.ts"],
	"exclude": ["node_modules"]
}
