precision highp float;
#include "utils.glslx"

varying vec2 vUV;

uniform vec3 upperColor;
uniform vec3 lowerColor;
uniform int face;
uniform sampler2D sampler;
uniform float resolution;
uniform float seed;
uniform vec2 lowerClamp;

const vec2 range = vec2(0.3, 0.4);

export void fragmentSource() {
	float luminance = scalar_field(face, vUV, seed, resolution, sampler);

	gl_FragColor = apply_luminance(luminance, range, lowerColor, upperColor, lowerClamp);
}
