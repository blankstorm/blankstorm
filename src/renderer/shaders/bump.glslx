precision highp float;
#include "utils.glslx"

varying vec2 vUV;

uniform vec3 upperColor;
uniform vec3 lowerColor;
uniform int face;
uniform float base;
uniform float resolution;
uniform float seed;
uniform vec2 lowerClamp;

const vec2 range = vec2(0.3, 0.4);

export void fragmentSource() {
	float luminance = luminance_at(spherical(face, vUV), base, resolution, seed);
	vec3 color = luminance_to_color(luminance, range, lowerColor, upperColor, lowerClamp);
	gl_FragColor = vec4(color, 1.0);
}
